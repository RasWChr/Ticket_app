       </VBox>
      <Button fx:id="btnCreateU" mnemonicParsing="false" onAction="#onCreateUClick" prefHeight="51.0" prefWidth="184.0" style="-fx-background-color: #369F97;" text="Create User" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="btnManageU" mnemonicParsing="false" onAction="#onManageUClick" prefHeight="51.0" prefWidth="184.0" style="-fx-background-color: #369F97;" text="Manage Users" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="btnEvent" mnemonicParsing="false" onAction="#onEventClick" prefHeight="51.0" prefWidth="184.0" style="-fx-background-color: #369F97;" text="Events" textFill="WHITE">
