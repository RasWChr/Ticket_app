            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="btnCreateT" mnemonicParsing="false" onAction="#onCreateTClick" prefHeight="51.0" prefWidth="184.0" style="-fx-background-color: #369F97;" text="Create Ticket" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#onLogOutClick" prefHeight="51.0" prefWidth="184.0" style="-fx-background-color: #369F97;" text="Log Out" textFill="WHITE">
